package com.example.onesec;

import java.io.IOException;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.AdapterView;
import android.widget.AdapterView.OnItemClickListener;
import android.widget.GridView;
import android.widget.Toast;

import com.example.onesec.impl.second.Cabinet;

public class ViewSecondsActivity extends Activity {
	
	public static boolean selectionModeIsOn = false;

	@Override
	public void onCreate(Bundle savedInstanceState) {
	    super.onCreate(savedInstanceState);
	    setContentView(R.layout.activity_gallery);

	    GridView gridview = (GridView) findViewById(R.id.gridview);
	    gridview.setAdapter(new SecondsAdapter(this));

	    gridview.setOnItemClickListener(new OnItemClickListener() {
	        public void onItemClick(AdapterView<?> parent, View v, int position, long id) {
	        	if (selectionModeIsOn){
	        		Cabinet.data.get(position).toggleChecked();
	        		System.out.println(position + " checked: " + Cabinet.data.get(position).isChecked());
	        	}
	        }
	    });
	}
	
	public void toggleSelectionMode(View v){
		if (selectionModeIsOn){
			Cabinet.setAllSecondsToUnchecked();
		}
		selectionModeIsOn = !selectionModeIsOn;
		Toast.makeText(this, "selectionModeIsOn: " + selectionModeIsOn, Toast.LENGTH_SHORT).show();
	}
	
	public void makeVideoFromChecked(View v) throws IOException{
		Intent i = new Intent(this, NewCakeActivity.class);
		startActivity(i);
	}
	
	public void selectAllVideos(View v){
		if (selectionModeIsOn){
			Cabinet.setAllSecondsToChecked();
		}
	}

}
